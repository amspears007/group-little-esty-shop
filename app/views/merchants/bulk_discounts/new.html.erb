<h1> Add Bulk Discount </h1>

<%= form_with url: merchant_bulk_discounts_path(@merchant), method: :post, local: true do |form| %>
  <h3><%= form.label :Percentage_Discount %>
  <%= form.number_field :Percentage_Discount %></h3> 
  <h3><%= form.label :Quantity_Threshold %>
  <%= form.number_field :Quantity_Threshold %></h3><br>
  <%= form.submit 'Add Discount' %>
<% end %>