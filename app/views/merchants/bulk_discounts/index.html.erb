<h1> Bulk Discounts Index Page </h1>
<h3> <%=  @merchant.name %> Discounts </h3> 
<div class="bulk_discount">
  <% @merchant_discounts.each do |discount| %>
  <div id="bulk-<% discount.id%>">
    <p> ID <%= link_to discount.id, merchant_bulk_discount_path(@merchant, discount)  %></p>
    <p> Discount: <%= discount.percentage_discount  %> %</p>
    <p> Minimum Quantity: <%= discount.quantity_threshold  %></p>
   <%= link_to "Delete #{discount.id}", merchant_bulk_discount_path(@merchant, discount), method: :delete %>
  <% end %>
  </div>
</div>
<p> <%= link_to "New Discount", new_merchant_bulk_discount_path(@merchant)  %></p>

